{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opscopilot.dev/schemas/llm_request.json",
  "title": "LlmRequest",
  "type": "object",
  "required": ["model_id", "messages", "response_format", "temperature", "max_tokens", "idempotency_key", "tags"],
  "properties": {
    "model_id": { "type": "string" },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": { "type": "string", "enum": ["system", "user", "assistant"] },
          "content": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "response_format": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["text", "json_schema"] },
        "schema": { "type": ["object", "null"] }
      },
      "additionalProperties": false
    },
    "temperature": { "type": "number", "minimum": 0 },
    "max_tokens": { "type": "integer", "minimum": 0 },
    "idempotency_key": { "type": "string" },
    "tags": {
      "type": "object",
      "required": ["session_id", "agent_run_id", "agent_node"],
      "properties": {
        "session_id": { "type": "string" },
        "agent_run_id": { "type": "string" },
        "agent_node": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
