{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opscopilot.dev/schemas/llm_response.json",
  "title": "LlmResponse",
  "type": "object",
  "required": ["output", "tokens_input", "tokens_output", "cost_usd", "latency_ms", "provider_metadata", "error"],
  "properties": {
    "output": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["text", "json"] },
        "text": { "type": ["string", "null"] },
        "json": { "type": ["object", "null"] }
      },
      "additionalProperties": false
    },
    "tokens_input": { "type": "integer", "minimum": 0 },
    "tokens_output": { "type": "integer", "minimum": 0 },
    "cost_usd": { "type": "number", "minimum": 0 },
    "latency_ms": { "type": "integer", "minimum": 0 },
    "provider_metadata": { "type": "object" },
    "error": {
      "type": ["object", "null"],
      "required": ["error_type", "message"],
      "properties": {
        "error_type": {
          "type": "string",
          "enum": ["budget_exceeded", "timeout", "provider_error", "invalid_request", "unknown_error"]
        },
        "message": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
